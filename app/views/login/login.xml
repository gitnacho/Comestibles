<Page loaded="loaded">
    <StackLayout orientation="vertical">
       <Image src="res://logo" stretch="none" horizontalAlignment="center" />

        <TextField id="email" hint="Dirección de correo electrónico" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <TextField hint="Contraseña" secure="true" />

        <Button text="Iniciar sesión" tap="signIn" />
        <Button class="link" text="Inscríbeme en Comestibles" tap="register" />
    </StackLayout>
</Page>
